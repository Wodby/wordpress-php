#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
    set -x
fi

disclaimer="// Generated by Wodby (add before wp-settings.php include)."
wp_config="${WP_ROOT}/wp-config.php"

su-exec wodby mkdir -p "${WP_ROOT}"

if [[ ! -f "${wp_config}" ]]; then
    su-exec wodby cp -f "${CONF_DIR}/wp-config.php" "${wp_config}"
elif [[ $( grep -ic "wodby.wp-config.php" "${wp_config}" ) -eq 0 ]]; then
    chmod 644 "${wp_config}"
    su-exec wodby sed -i "/wp-settings.php/i \\
${disclaimer} \\
require_once '${CONF_DIR}/wodby.wp-config.php';" "${wp_config}"
fi

# Symlink files dir
wp_content="${WP_ROOT}/wp-content"
su-exec wodby mkdir -p "${wp_content}"
files_link "${wp_content}/uploads"

# Update permissions to allow installing themes and plugins from WP admin dashboard.
chown :www-data "${wp_content}" "${wp_content}/plugins" "${wp_content}/themes" || true
chmod 775 "${wp_content}" "${wp_content}/plugins" "${wp_content}/themes" || true
